@using Microsoft.AspNetCore.Authentication
@model AuthenticationScheme[]

<div class="jumbotron">
    <h1>Login</h1>
    <p class="lead text-left">Du kannst dich über einen dieser Provider authentifizieren:</p>

    @foreach (var scheme in Model.OrderBy(p => p.DisplayName))
    {
<form action="/signin" method="post">
    <input type="hidden" name="Provider" value="@scheme.Name" />
    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />

    <button class="btn btn-lg btn-success m-1" type="submit">@scheme.DisplayName</button>
</form>}
</div>